<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lcdbg"
    android:scaleType="centerCrop"
    android:fillViewport="true">
    <RelativeLayout android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:id="@+id/header_container"
            android:layout_alignParentTop="true">

            <com.httpfriccotech.lastchancediet.ui.DietTextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="34dp"
                android:gravity="center_horizontal"
                android:text="Last Chance Diet"
                android:textAlignment="center"
                android:textColor="#154983"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="320dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_centerInParent="true">


            <EditText
                android:id="@+id/et_email"
                android:layout_width="wrap_content"
                android:layout_height="59.5dp"
                android:minWidth="320dp"
                android:background="@drawable/border_edittext"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="21dp"
                android:hint="Enter Email"
                android:paddingLeft="18dp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>


            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/et_email"
                android:text="Send Password"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:minWidth="320dp"
                android:padding="7dp"
                android:textColorHint="@color/grey"
                android:textSize="16sp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/buttonSubmit"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:id="@+id/message"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:padding="12dp"
                android:visibility="gone"/>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
