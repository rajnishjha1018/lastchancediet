<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/caloriesLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.httpfriccotech.lastchancediet.ui.DietTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="Category"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>
            <ImageButton
                android:id="@+id/ib_add_ex2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/md_transparent"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/caloriesLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:paddingBottom="7dp">
            <com.httpfriccotech.lastchancediet.ui.DietTextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sets type"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center"
                android:id="@+id/Ex1"
                android:layout_marginLeft="10dp" />
            <!--<ImageButton-->
            <!--android:id="@+id/btnAddExercise"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_gravity="center"-->

            <!--android:src="@android:drawable/ic_input_add" />-->

            <com.httpfriccotech.lastchancediet.ui.DietTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sets"
                android:textColor="#000"
                android:layout_weight="1"
                android:textSize="12dp"
                android:gravity="center"
                android:id="@+id/v1"
                android:layout_marginLeft="10dp"
                />
            <com.httpfriccotech.lastchancediet.ui.DietTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Reps/Set"
                android:textColor="#000"
                android:layout_weight="1"
                android:textSize="12dp"
                android:gravity="center"
                android:id="@+id/v12"
                android:layout_marginLeft="10dp"
                />

            <com.httpfriccotech.lastchancediet.ui.DietTextView
                android:text="Weight/Set"
                android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/textCaloriesBurned"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="6dp"
            android:background="@color/greyLight"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.httpfriccotech.lastchancediet.ui.DietTextView
        android:id="@+id/txtSetsType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Sets Type"
        android:textColor="#000"
        android:textSize="12dp" />
    <com.httpfriccotech.lastchancediet.ui.DietTextView
        android:id="@+id/txtSets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Sets"
        android:textColor="#000"
        android:textSize="12dp" />

    <com.httpfriccotech.lastchancediet.ui.DietTextView
        android:id="@+id/textReps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Reps/Set"
        android:textColor="#000"
        android:textSize="12dp"
        android:layout_gravity="center"/>

    <com.httpfriccotech.lastchancediet.ui.DietTextView
        android:id="@+id/textWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Weight/Set"
        android:textColor="#000"
        android:textSize="12dp" />
</LinearLayout>
    <View
        android:layout_marginTop="6dp"
        android:background="@color/greyLight"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginBottom="4dp"/>
</LinearLayout>