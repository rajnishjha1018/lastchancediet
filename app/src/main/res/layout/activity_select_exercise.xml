<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.httpfriccotech.lastchancediet.Food.SelectFoodActivity">

    <android.support.v7.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/search_view"
        android:padding="7dp">
        <com.httpfriccotech.lastchancediet.ui.DietTextView
            android:layout_width="0dp"
            android:layout_weight="1.12"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Exercise Name"
            android:textColor="#000"
            android:textSize="12dp"
            android:gravity="center"
            android:id="@+id/txtExerciseName"
            android:layout_marginLeft="10dp"
            />

        <com.httpfriccotech.lastchancediet.ui.DietTextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Duration"
            android:textColor="#000"
            android:textSize="12dp"
            android:gravity="center"
            android:id="@+id/txtDuration"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_recycle"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_20sdp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addNewExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/_16sdp"
        android:src="@android:drawable/ic_input_add"
        android:tint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
