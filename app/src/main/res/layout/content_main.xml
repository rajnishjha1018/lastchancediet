<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView02"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/lcdbg">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.httpfriccotech.lastchancediet.ui.DietTextView
        android:id="@+id/tv_last_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67.7dp"
        android:layout_marginRight="67.7dp"
        android:layout_marginTop="34dp"
        android:layout_centerHorizontal="true"
        android:text="Last Chance Diet"
        android:textAlignment="center"
        android:textColor="#154983"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/LinearViewInvalid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_last_change"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <com.httpfriccotech.lastchancediet.ui.DietTextView
            android:id="@+id/textViewInvalid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="Invalid Credential"
            android:textColor="#de0000"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edittext"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="20dp"
            android:hint="Enter Username"
            android:padding="@dimen/_10sdp"
            android:paddingLeft="18dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edittext"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="21dp"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            android:paddingLeft="18dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#154983"
            android:drawablePadding="21dp"
            android:padding="@dimen/_10sdp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textColorHint="@color/grey"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_24sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <com.httpfriccotech.lastchancediet.ui.DietTextView
            android:id="@+id/SignUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_12sdp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:onClick="onClick"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.httpfriccotech.lastchancediet.ui.DietTextView
            android:id="@+id/ForgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/_12sdp"
            android:text="Forgot Password"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>


    <!--</LinearLayout>-->

</RelativeLayout>
</ScrollView>