<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lcdbg" />
    <!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         android:id="@+id/activity_main"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:orientation="vertical"
         tools:context="com.example.rajnish.test444.MainActivity"
         tools:ignore="HardcodedText">-->


    <com.httpfriccotech.lastchancediet.ui.DietTextView
        android:id="@+id/tv_last_change"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:layout_marginLeft="67.7dp"
        android:layout_marginRight="67.7dp"
        android:layout_marginTop="34dp"
        android:gravity="center_horizontal"
        android:text="Last Chance Diet"
        android:textAlignment="center"
        android:textColor="#154983"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/LinearViewInvalid"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_last_change"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <com.httpfriccotech.lastchancediet.ui.DietTextView
            android:id="@+id/textViewInvalid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="Invalid Credential"
            android:textColor="#de0000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:background="@color/white"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edittext"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="21dp"
            android:hint="Username"
            android:padding="@dimen/_10sdp"
            android:paddingLeft="18dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edittext"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="21dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            android:paddingLeft="18dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#154983"
            android:drawablePadding="21dp"
            android:padding="@dimen/_10sdp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textColorHint="@color/grey"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_24sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <com.httpfriccotech.lastchancediet.ui.DietTextView
            android:id="@+id/SignUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_12sdp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.httpfriccotech.lastchancediet.ui.DietTextView
            android:id="@+id/ForgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/_12sdp"
            android:text="Forgot Password"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>


    <!--</LinearLayout>-->

</RelativeLayout>
